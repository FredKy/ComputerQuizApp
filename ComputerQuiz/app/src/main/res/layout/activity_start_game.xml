<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f4f8"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".StartGame"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/stopwatch" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center|center_vertical"
                android:text="10s"
                android:textSize="24sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/star2" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center|center_vertical"
                android:text="0/10"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvQuestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Loading questions..."
            android:textSize="24sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#094C93"
                android:backgroundTint="@null"
                android:onClick="answerSelected"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#0C73B2"
                android:backgroundTint="@null"
                android:onClick="answerSelected"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#1C96BA"
                android:backgroundTint="@null"
                android:onClick="answerSelected"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#3CBCC7"
                android:backgroundTint="@null"
                android:onClick="answerSelected"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="32sp" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>